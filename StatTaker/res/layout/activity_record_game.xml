<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecordGame" >

    <Button
        android:id="@+id/keeper_home"
        android:onClick="showKeeperHomeMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="keeper" />

    <Button
        android:id="@+id/beater_home_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keeper_home"
        android:layout_alignParentRight="true"
        android:text="beater 2" />

    <Button
        android:id="@+id/beater_home_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keeper_home"
        android:layout_alignParentLeft="true"
        android:text="beater 1" />

	<Button
	    android:id="@+id/undo_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:text="Undo" />

	<Button
	    android:id="@+id/save_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/undo_button"
	    android:layout_alignBottom="@+id/undo_button"
	    android:layout_alignParentRight="true"
	    android:text="Save Game" />

	<TextView
	    android:id="@+id/score"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/save_button"
	    android:layout_alignBottom="@+id/save_button"
	    android:layout_centerHorizontal="true"
	    android:text="Current score"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<Button
	    android:id="@+id/chaser_home_2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/beater_home_1"
	    android:layout_alignLeft="@+id/beater_home_1"
	    android:layout_marginBottom="84dp"
	    android:onClick="showChaser2HomeMenu"
	    android:text="chaser 2" />

	<Button
	    android:id="@+id/chaser_home_1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/save_button"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="33dp"
	    android:onClick="showChaser1HomeMenu"
	    android:text="chaser 1" />

	<Button
	    android:id="@+id/chaser_home_3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/beater_home_2"
	    android:layout_alignTop="@+id/chaser_home_2"
	    android:onClick="showChaser3HomeMenu"
	    android:text="chaser 3" />

	<Button
	    android:id="@+id/seeker_home"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/chaser_home_3"
	    android:onClick="showSeekerHomeMenu"
	    android:text="seeker" />
	
</RelativeLayout>