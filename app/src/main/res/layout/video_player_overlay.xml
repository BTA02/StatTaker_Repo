<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="HOME:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/overlay_home_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="0"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="AWAY:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/overlay_away_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="0"
            android:textSize="20sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/overlay_column_lineup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ListView
                android:id="@+id/overlay_onfield_players"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/overlay_list_view">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overlay_column_basic_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/overlay_shot"
                style="@style/overlay_list_view"
                android:text="Shot"/>

            <TextView
                android:id="@+id/overlay_goal"
                style="@style/overlay_list_view"
                android:text="Goal"/>

            <TextView
                android:id="@+id/overlay_assist"
                style="@style/overlay_list_view"
                android:text="Assist"/>

            <TextView
                android:id="@+id/overlay_turnover"
                style="@style/overlay_list_view"
                android:text="Turnover"/>

            <TextView
                android:id="@+id/overlay_snitch_catch"
                style="@style/overlay_list_view"
                android:text="Snitch catch" />

            <TextView
                android:id="@+id/overlay_yellow_card"
                style="@style/overlay_list_view"
                android:text="Yellow card"/>

            <TextView
                android:id="@+id/overlay_red_card"
                style="@style/overlay_list_view"
                android:text="Red card"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overlay_column_extras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/overlay_start_clock"
                style="@style/overlay_list_view"
                android:text="Start clock"/>

            <TextView
                android:id="@+id/overlay_pause_clock"
                style="@style/overlay_list_view"
                android:text="Pause clock"/>

            <TextView
                android:id="@+id/overlay_snitch"
                style="@style/overlay_list_view"
                android:text="Snitch on pitch"/>

            <TextView
                android:id="@+id/overlay_start_game"
                style="@style/overlay_list_view"
                android:text="Start game"/>

            <TextView
                android:id="@+id/overlay_end_game"
                style="@style/overlay_list_view"
                android:text="End game"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>