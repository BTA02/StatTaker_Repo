<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/preview_stat_prev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PREV"/>

        <TextView
            android:id="@+id/preview_stat_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="NEXT"/>

        <TextView
            android:id="@+id/preview_stat_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0/0"/>

        <TextView
            android:id="@+id/preview_stat_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DEL"/>
    </LinearLayout>

    <TextView
        android:id="@+id/preview_stat_action"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ACTION"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/preview_stat_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NAME"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/preview_stat_sub_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NAME IN"
        android:textSize="20sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/preview_stat_adjust_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/preview_stat_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TIME"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/preview_stat_adjust_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>