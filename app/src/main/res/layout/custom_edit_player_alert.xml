<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--  
    <TextView
        android:id="@+id/edit_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Player"
        android:textSize="30sp" />
	-->
    <EditText
        android:id="@+id/edit_custom_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="new number" />

    <EditText
        android:id="@+id/edit_custom_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" 
        android:hint="new first name"/>

    <EditText
        android:id="@+id/edit_custom_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" 
        android:hint="new last name"/>
    
    <CheckBox
        android:id="@+id/edit_custom_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active" />

</LinearLayout>
